<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/signup">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="698dp"
        android:background="@drawable/signup_rounded_white_bg"
        android:elevation="8dp"></View>

    <!-- Back button -->

    <!-- Title: Pothole Patrol -->

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop ="true"
        android:layout_marginTop="52dp"
        android:layout_marginStart="41dp"
        android:text="Join the"
        android:textColor="#06066b"
        android:textSize="40sp"
        android:translationZ="10dp"
        android:textStyle="bold" />

    <!-- Subtitle: Fill the below information to login -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleText"
        android:text="Plothole Patrol"
        android:layout_marginStart="41dp"
        android:textColor="#06066b"
        android:textSize="40sp"
        android:textStyle="bold"
        android:translationZ="10dp"
        android:layout_marginTop="8dp" />

    <!-- Login box -->
    <LinearLayout
        android:id="@+id/loginBox"
        android:layout_width="match_parent"
        android:layout_height="431dp"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:padding="16dp"
        android:background="@drawable/signup_rounded_blue_bg"
        android:elevation="10dp"
        android:orientation="vertical">

        <!-- Login Account Text -->
        <TextView
            android:id="@+id/loginAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Sign up"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:textStyle="bold" />

        <!-- Username EditText -->
        <EditText
            android:id="@+id/usernameInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="11dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="11dp"
            android:layout_weight="1"
            android:background="@drawable/sign_log_edittext"
            android:hint="Username"
            android:padding="11dp"
            android:textColor="#000000" />

        <!-- Password EditText -->
        <EditText
            android:id="@+id/EmailInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="11dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="11dp"
            android:layout_weight="1"
            android:background="@drawable/sign_log_edittext"
            android:hint="Email"
            android:padding="12dp"
            android:textColor="#000000" />

        <!-- Login Button -->
        <EditText
            android:id="@+id/PassInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_marginStart="11dp"
            android:layout_marginEnd="11dp"
            android:background="@drawable/sign_log_edittext"
            android:hint="Password"
            android:padding="12dp"
            android:textColor="#000000" />

        <!-- Continue with Google Button -->
        <EditText
            android:id="@+id/ConfirmInput"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="11dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="11dp"
            android:layout_weight="1"
            android:background="@drawable/sign_log_edittext"
            android:hint="Confirm Password"
            android:padding="12dp"
            android:textColor="#000000" />

        <Button
            android:id="@+id/signupButton"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="48dp"
            android:background="@drawable/signup_btn_signup"
            android:drawableStart="@drawable/log_sign"
            android:paddingRight="45dp"
            android:text="Sign up"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#06066b" />

    </LinearLayout>

    <!-- Sign up option -->

    <TextView
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loginBox"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textSize="16sp"
        android:text="By signing up, you are agree to our Term and Conditions and Privacy Policy"
        android:textColor="#000000"
        android:translationZ="10dp" />



    <Button
        android:id="@+id/signInButton"
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/signup_haveacc_btn"
        android:gravity="center"
        android:padding="22dp"
        android:textAllCaps="false"
        android:text="Already have an account? Sign in"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />
</RelativeLayout>
