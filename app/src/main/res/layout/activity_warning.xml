<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_warning"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/warning"
        android:layout_marginTop="15dp"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="45dp"
            android:layout_height="30dp"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/txt_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@id/img_back"
            android:text="Pothole detection"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pothole_size"
        android:layout_below="@id/warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pothole Size"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/info_size"
            android:layout_below="@id/size"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.25 meters"
            android:textSize="12sp"
            android:textColor="@color/info"
            android:layout_marginLeft="16dp" />
        <ImageView
            android:id="@+id/img_change_size"
            android:layout_alignParentRight="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_change_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/address"
        android:layout_below="@id/pothole_size"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/info_location"
            android:layout_below="@id/location"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ta Quang Buu, Dong Hoa, Di An"
            android:textSize="12sp"
            android:textColor="@color/info"
            android:layout_marginLeft="16dp" />
        <ImageView
            android:id="@+id/img_change_location"
            android:layout_alignParentRight="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_change_location" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/day"
        android:layout_below="@id/address"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginLeft="16dp" />
        <TextView
            android:id="@+id/info_date"
            android:layout_below="@id/date"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11/10/2024"
            android:textSize="12sp"
            android:textColor="@color/info"
            android:layout_marginLeft="16dp" />
        <ImageView
            android:id="@+id/img_change_date"
            android:layout_alignParentRight="true"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/img_change_date" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/description"
        android:layout_below="@id/day"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:lineSpacingExtra="8sp"
            android:text="The sinkhole is located on Ta Quang Buu Street near dormitory area A. The hole is about 1.25 meters in diameter and about 0.8 centimeters deep."/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/up_image"
        android:layout_width="412dp"
        android:layout_height="316dp"
        android:layout_below="@id/description"
        android:layout_marginTop="8dp"
        android:background="@drawable/up_image_file">

        <ImageView
            android:id="@+id/img_upload"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/img_up_image"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="145dp" />

        <!-- TextView nằm chính giữa trong View -->
        <TextView
            android:id="@+id/txt_upload"
            android:layout_toRightOf="@id/img_upload"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="20sp"
            android:textColor="#689cff"
            android:lineSpacingExtra="2sp"
            android:text="Upload an image file"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/report"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/up_image"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_report"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#2196F3"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:text="Report this pothole"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function"
        android:layout_below="@id/report"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_dashboard"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/img_dashboard"/>
        <ImageView
            android:id="@+id/img_map"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_map"/>
        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_setting"/>
    </LinearLayout>

</RelativeLayout>