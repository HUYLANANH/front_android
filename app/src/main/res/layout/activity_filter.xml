<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_filter"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/filter"
        android:layout_marginTop="15dp"
        android:layout_width="412dp"
        android:layout_height="50dp"
        android:background="#ffffff">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:src="@drawable/img_back" />

        <TextView
            android:id="@+id/txt_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="119dp"
            android:layout_toRightOf="@id/img_back"
            android:text="Filter"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_date_range"
        android:layout_below="@id/filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date Range"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp" />
    <LinearLayout
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date_range"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_last_month"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Last month"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_last_week"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Last week"
            android:textSize="18sp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/time1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/time"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_last_day"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Last day"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_at_this_time"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="At this time"
            android:textSize="18sp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_severity"
        android:layout_below="@id/time1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Severity"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="18dp"
        android:layout_marginLeft="16dp"/>
    <LinearLayout
        android:id="@+id/severity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_severity"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_low"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Low"
            android:textSize="18sp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_medium"
            android:backgroundTint="@color/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="18sp"
            android:layout_marginLeft="77dp"
            android:layout_marginRight="16dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_high"
        android:backgroundTint="@color/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/severity"
        android:layout_marginTop="12dp"
        android:text="High"
        android:textSize="18sp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:id="@+id/apply"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_high"
        android:layout_marginTop="275dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_apply_filter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#FF5722"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="20sp"
            android:text="Apply Filter"
            android:textStyle="bold"/>
    </LinearLayout>
    <!-- Đường thẳng ngăn cách -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3"
        android:layout_below="@id/apply"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>


    <LinearLayout
        android:id="@+id/function"
        android:layout_below="@id/apply"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center">
        <ImageView
            android:id="@+id/img_dashboard"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:src="@drawable/img_dashboard"/>
        <ImageView
            android:id="@+id/img_map"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_map_bold"/>
        <ImageView
            android:id="@+id/img_setting"
            android:layout_width="110dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/img_setting"/>
    </LinearLayout>

</RelativeLayout>